<% if logged_in? %>

<h1>タスク一覧</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
      <%== pagy_bootstrap_nav(@pagy) %>
    
  </div>
  <%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>
  
  <% else %>
   
   redirect_to root_url
   
   <%end%>
